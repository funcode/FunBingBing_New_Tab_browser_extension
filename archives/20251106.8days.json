        "ultraHighDef": "/th?id=OHR.MexicoJelly_ZH-CN5266285518_UHD.jpg",
        "wallpaper": "/th?id=OHR.MexicoJelly_ZH-CN5266285518_1920x1200.jpg"
      },
      "portrait": {
        "highDef": "/th?id=OHR.MexicoJelly_ZH-CN5266285518_768x1366.jpg",
